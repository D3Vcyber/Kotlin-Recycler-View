<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layouthere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mymonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:fontFamily="cursive"
            android:textAlignment="viewStart"
            android:padding="12dp"
            android:text="This one November"
            android:textColor="@color/Gold"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/hermonth"
            app:layout_constraintEnd_toStartOf="@+id/imageV2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="12dp"
            android:fontFamily="cursive"
            android:padding="12dp"
            android:text="This one for harmony"
            android:textColor="@color/Gold"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageV2" />

        <TextView
            android:id="@+id/hermonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:fontFamily="cursive"
            android:padding="12dp"
            android:text="This one for September"
            android:textColor="@color/Gold"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="viewEnd"
            app:layout_constraintBottom_toBottomOf="@+id/imageV2"
            app:layout_constraintStart_toEndOf="@+id/imageV2" />

        <ImageView
            android:id="@+id/imageV2"
            android:layout_width="83dp"
            android:layout_height="88dp"
            android:layout_marginStart="148dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/toxgazxvtcwzv1ukubi2__1__89rd7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>